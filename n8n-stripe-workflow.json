            },
            {
              "name": "line_items[0][price_data][product_data][name]",
              "value": "QR Code Download"
            },
            {
              "name": "line_items[0][price_data][product_data][description]",
              "value": "High-quality QR code in PNG, SVG, and JPEG formats"
            },
            {
              "name": "line_items[0][price_data][unit_amount]",
              "value": "199"
            },
            {
              "name": "line_items[0][quantity]",
              "value": "1"
            },
            {
              "name": "allow_promotion_codes",
              "value": "true"
            },
            {
              "name": "metadata[qr_type]",
              "value": "={{ $json.body.metadata.qr_type || 'url' }}"
            },
            {
              "name": "metadata[qr_size]",
              "value": "={{ $json.body.metadata.qr_size || '800' }}"
            },
            {
              "name": "metadata[dots_style]",
              "value": "={{ $json.body.metadata.dots_style || 'square' }}"
            },
            {
              "name": "metadata[corners_style]",
              "value": "={{ $json.body.metadata.corners_style || 'square' }}"
            },
            {
              "name": "metadata[fg_color]",
              "value": "={{ $json.body.metadata.fg_color || '#000000' }}"
            },
            {
              "name": "metadata[bg_color]",
              "value": "={{ $json.body.metadata.bg_color || '#ffffff' }}"
            },
            {
              "name": "success_url",
              "value": "={{ $json.body.successUrl || 'https://qrgen.studio?payment=success' }}"
            },
            {
              "name": "cancel_url",
              "value": "={{ $json.body.cancelUrl || 'https://qrgen.studio?payment=cancelled' }}"
            }
          ]
        },
        "options": {}
      },
      "id": "stripe-request",
      "name": "Create Stripe Session",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [500, 300],
      "credentials": {
        "httpHeaderAuth": {
          "id": "STRIPE_AUTH_ID",
          "name": "Stripe API Key"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { sessionId: $json.id, url: $json.url } }}",
        "options": {
          "responseHeaders": {
            "entries": [
              {
                "name": "Access-Control-Allow-Origin",
                "value": "*"
              }
            ]
          }
        }
      },
      "id": "respond-webhook",
      "name": "Respond to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [750, 300]
    },
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "stripe-webhook",
        "options": {}
      },
      "id": "webhook-stripe",
