      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [250, 600],
      "webhookId": "stripe-webhook"
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.body.type }}",
              "value2": "checkout.session.completed"
            }
          ]
        }
      },
      "id": "if-payment",
      "name": "If Payment Success",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [500, 600]
    },
    {
      "parameters": {
        "respondWith": "json",
